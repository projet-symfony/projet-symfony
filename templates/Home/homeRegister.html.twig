{%  extends "base.html.twig" %}

{% block title  %}
    Nextipster
{% endblock %}

{%  block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('CSS/home.css') }}">
{% endblock %}

{% block titleForm %} Inscription {% endblock %}
    {% block form %}{{form(form)}} {% endblock %}
    {% block register %} <button><a href="/">Se connecter</a></button> {% endblock %}

{%  block body %}


    <div id="slides">
        <img src="" alt="slides">
    </div>


    <h2> Matchs de la semaine </h2>
    <hr class="separator"> <br />


    <ul class="ulMatch">
        <li class="headerMatch"> Champions League </li>
        {% for i in 0..match|length-2 %}
            <li class="match"><a href= "{{ path('Analyse') }}"> <span class="time">18:55</span> <span class="team">{{ match[i].NomEquipe }} -  {{  match[i+1].NomEquipe }}</span> </a></li>
        {% endfor %}
    </ul>



{% endblock %}

